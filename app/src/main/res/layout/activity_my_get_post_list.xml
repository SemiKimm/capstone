<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyGetPostListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/get_post_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="습득물 게시글 목록"
        android:layout_centerInParent="true"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/gray"
            android:layout_below="@id/get_post_list_title"/>

    <RelativeLayout
        android:id="@+id/get_post_list"
        android:layout_width="match_parent"
        android:layout_height="690dp"
        android:layout_below="@id/get_post_list_title"
        android:layout_marginTop="10dp">

        <ListView
            android:id="@+id/my_get_post_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/list_non"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작성한 게시글 내역이 없습니다."
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>


    </RelativeLayout>

    </RelativeLayout>


</ScrollView>