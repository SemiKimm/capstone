<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:layout_margin="15dp"
android:padding="10dp">
<TextView
    android:id="@+id/lost_textView_list_title"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="4"
    android:layout_margin="5dp"
    android:padding="5dp" />
<TextView
    android:id="@+id/lost_textView_list_place"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="4"
    android:layout_margin="5dp"
    android:padding="5dp" />

<TextView
    android:id="@+id/lost_textView_list_date"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="5"
    android:layout_margin="5dp"
    android:padding="5dp" />

<TextView
    android:id="@+id/lost_textView_list_color"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="5"
    android:layout_margin="5dp"
    android:padding="5dp" />

<TextView
    android:id="@+id/lost_textView_list_more_info"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="5"
    android:layout_margin="5dp"
    android:padding="5dp" />

<TextView
    android:id="@+id/lost_textView_list_img"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="5"
    android:layout_margin="5dp"
    android:padding="5dp" />

<ImageView
    android:id="@+id/lost_imgView_list"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
</LinearLayout>