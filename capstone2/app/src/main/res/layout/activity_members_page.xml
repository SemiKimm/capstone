<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/user_profile"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="120dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_toRightOf="@id/user_profile"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="120dp" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="님의 페이지 입니다."
        android:layout_toRightOf="@id/tv_name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="120dp" />

    <TextView
        android:id="@+id/text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_toRightOf="@id/user_profile"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="아이디"/>

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@id/welcome"
        android:layout_toRightOf="@id/text_id"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/reportButton"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="신고"
        android:layout_toRightOf="@id/user_profile"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/welcome"
        android:layout_marginTop="65dp" />

    <ImageView
        android:id="@+id/user_badge"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/user_profile"
        android:layout_marginTop="30dp"
        android:src="@drawable/defaultimg" />

    <ImageView
        android:id="@+id/user_reliability"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/user_profile"
        android:layout_toRightOf="@id/user_badge"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/defaultimg" />

    <TextView
        android:id="@+id/postList"
        android:layout_width="350dp"
        android:layout_height="160dp"
        android:text="작성글 목록"
        android:layout_below="@id/user_reliability"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp" />

</RelativeLayout>