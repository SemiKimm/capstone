<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:padding="15dp"
            android:textSize="20dp"
            android:text="분실물 검색"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/searchCategoryLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/searchCategoryView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="      카테고리 :    "
                        />
                    <TextView
                        android:id="@+id/searchLostCategoryData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="물건 분류 선택"
                        />
                    <Spinner
                        android:id="@+id/searchLostCategorySpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/searchColorLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/searchColorView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="      분실물 색상  :    "
                        />
                    <TextView
                        android:id="@+id/searchLostColorData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="색상 선택"
                        />
                    <Spinner
                        android:id="@+id/searchLostColorSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/searchLocalLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/searchLocalView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="      분실 지역 :    "
                        />
                    <TextView
                        android:id="@+id/searchLostLocalData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="분실 지역 선택" />
                    <Spinner
                        android:id="@+id/searchLostLocalSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/searchPlaceLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/searchPlaceView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="      분실 장소 :    "
                        />
                    <EditText
                        android:id="@+id/searchLostPlaceData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/searchDateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/searchDateView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="      분실 날짜 :    "
                        />
                    <TextView
                        android:id="@+id/searchLostDateData1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="yy/mm/dd"
                        />
                    <Button
                        android:id="@+id/searchSelectDateBtn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="날짜 선택" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" ~ "
                        />
                    <TextView
                        android:id="@+id/searchLostDateData2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="yy/mm/dd"
                        />
                    <Button
                        android:id="@+id/searchSelectDateBtn2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="날짜 선택" />
                </LinearLayout>

                <Button
                    android:id="@+id/searchFunctionBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="100dp"
                    android:paddingHorizontal="50dp"
                    android:text='검색'>
                </Button>

            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/searchBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="search"/>
            <Button
                android:id="@+id/postingBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="posting"/>
            <Button
                android:id="@+id/homeBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="home" />
            <Button
                android:id="@+id/chatBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="chat" />
            <Button
                android:id="@+id/myPageBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="my"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>